set-option -g default-terminal "screen-256color"
set-option -g history-limit 10000
set-option -g prefix C-f
unbind-key C-b
bind-key C-f send-prefix

set-option -sg escape-time 1
setw -g mode-keys vi
bind-key -T copy-mode-vi 'v' send-keys -X begin-selection
bind-key -T copy-mode-vi 'C-v' send-keys -X rectangle-toggle
bind-key -T copy-mode-vi 'y' send-keys -X copy-selection
bind r source-file /etc/tmux.conf \; display "Reloaded!"
bind c new-window -c "#{pane_current_path}" -n ""
bind | split-window -h -c "#{pane_current_path}"
bind - split-window -v -c "#{pane_current_path}"
bind-key C-c run-shell "tmux show-buffer | xsel -b -i"
bind-key C-v run-shell "tmux set-buffer \"$(xsel -b -o)\"; tmux paste-buffer"

set-option -g status-position top

# Status update interval
set-option -g status-interval 3

# Basic status bar colors
set-option -g status-style fg=colour238,bg=colour233

# Left side of status bar
set-option -g status-left-style bg=colour233,fg=colour243
set-option -g status-left-length 50
set-option -g status-left "#[fg=colour232,bg=colour24,bold] #(hostname -s) #[fg=colour24,bg=colour240,nobold]#[fg=colour233,bg=colour240] {{ public_interface_ip }} #[fg=colour240,bg=colour245]#[fg=colour233,bg=colour245,bold] #I:#P #[fg=colour245,bg=colour233]"

set-option -g status-right ""

# Window status
set-option -g window-status-format "  #I:#W#F  "
set-option -g window-status-current-format "#[fg=colour233,bg=black]#[fg=colour33,nobold] #I:#W#F #[fg=colour233,bg=black,nobold]"

# Current window status
set-option -g window-status-current-style bg=colour100,fg=colour235

# Window with activity status, fg and bg are flipped here due to a bug in tmux
set-option -g window-status-activity-style bg=colour245,fg=colour233

# Window separator
set-option -g window-status-separator ""

# Window status alignment
set-option -g status-justify left 

# Pane border
set-option -g pane-border-style bg=default,fg=colour238

# Active pane border
set-option -g pane-active-border-style bg=default,fg=colour24

# Pane number indicator
set-option -g display-panes-colour colour233
set-option -g display-panes-active-colour colour245

# Clock mode
set-option -g clock-mode-colour colour24
set-option -g clock-mode-style 24

# Message
set-option -g message-style bg=colour24,fg=default

# Command message
set-option -g message-command-style bg=colour24,fg=default

# Mode
set-option -g mode-style bg=colour24,fg=colour231
